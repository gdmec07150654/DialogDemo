<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.gdmec07150650.dialog.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/charactor"/>
    <Button
        android:onClick="characterpickerdialog"
        android:text="字符选择对话框"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/uidate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="datepickerdialog"
        android:text="日期选择对话框"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/uitime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="timepickerdialog"
        android:text="时间选择对话框"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="progressdialog"
        android:text="进度对话框"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
